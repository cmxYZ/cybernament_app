<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        app:cardCornerRadius="15dp"
        android:background="@drawable/gradient_card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/gradient_card">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tournamentId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tournament id"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/tournamentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tournament name"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/tournamentGame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tournament game"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tournamentGameMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tournament game mode"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tournamentInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tournament info"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tournamentFormat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tournament format"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tournamentStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tournament start date"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tournamentTeamsCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:paddingBottom="10dp"/>
                <Button
                    android:id="@+id/tournamentRegistration"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#228D74"
                    android:layout_gravity="center"
                    android:text="Зарегистрироваться"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>