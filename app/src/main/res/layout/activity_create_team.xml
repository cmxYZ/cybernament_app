<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CreateOrganization">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/black">

            <View
                android:id="@+id/chooseForm"
                android:layout_width="match_parent"
                android:layout_height="242sp"
                android:background="@drawable/authorization_background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cybernament"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:id="@+id/companyName"/>

            <TextView
                android:id="@+id/createOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/companyName"
                android:layout_marginTop="100dp"
                android:text="Создайте команду"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_below="@id/createOrganization"
                app:cardBackgroundColor="#373431"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Название команды"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="#FFA83D22"
                    android:textSize="30sp"
                    android:id="@+id/setTeamName"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/teamName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/corner_rounder"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Игра"
                    android:layout_marginTop="120sp"
                    android:textAlignment="center"
                    android:textColor="#FFA83D22"
                    android:textSize="30sp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/teamGame"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/corner_rounder"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Описание"
                    android:layout_marginTop="240sp"
                    android:textAlignment="center"
                    android:textColor="#FFA83D22"
                    android:textSize="30sp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/teamInfo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="300dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/corner_rounder"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Регион"
                    android:layout_marginTop="420sp"
                    android:textAlignment="center"
                    android:textColor="#FFA83D22"
                    android:textSize="30dp"
                    android:id="@+id/setOrganizationRegion"/>

                <Spinner
                    android:id="@+id/teamRegion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="480dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/corner_rounder"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
                <Button
                    android:id="@+id/createTeamButton"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Создать"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="560dp"
                    android:layout_marginBottom="35dp"
                    android:background="@color/cardview_dark_background"
                    android:textColor="#FFA83D22"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>