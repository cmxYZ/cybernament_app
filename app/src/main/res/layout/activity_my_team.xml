<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyTeam">
    <TextView
        android:id="@+id/myTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Моя команда"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/teamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myTeam"
        android:text="TeamName"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/teamGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TeamGame"
        android:layout_below="@id/teamName"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/teamInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TeamInfo"
        android:layout_below="@+id/teamGame"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/teamRegion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TeamRegion"
        android:layout_below="@+id/teamInfo"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/teamPlayersCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TeamPlayersCount"
        android:layout_below="@+id/teamRegion"
        android:textSize="24dp"/>
    <Button
        android:id="@+id/goBackButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="назад"
        android:layout_below="@id/teamPlayersCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
</RelativeLayout>