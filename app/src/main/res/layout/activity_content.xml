<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer">
        <RelativeLayout
            android:id="@+id/newContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical"
            tools:ignore="NotSibling">

            <TextView
                android:id="@+id/myTournamentsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Мои турниры"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myTournamentsText"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/myTournamentsText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="0"
                        android:textColor="#FF7E06"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/myTournamentsText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="70dp"
                        android:text="Текущие турниры"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/myTournamentsText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="0"
                        android:textColor="#FF7E06"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/myTournamentsText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="70dp"
                        android:text="Завершенные турниры"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <View
                android:id="@+id/underMyTournamentsLine"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/myTournamentsText"
                android:layout_marginTop="160dp"
                android:background="#8B0000" />

            <TextView
                android:id="@+id/lastTournamentsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/underMyTournamentsLine"
                android:layout_marginTop="20sp"
                android:text="Недавние турниры"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/noTournaments"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastTournamentsText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:text="за последние 30 дней вы не проводили турниры"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <Button
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_below="@id/noTournaments"
                android:backgroundTint="#A8B1FF"
                android:text="Создать турнир"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:layout_marginTop="20sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/createTournamentButton"/>

            <View
                android:id="@+id/underCreateTournamentLine"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/createTournamentButton"
                android:layout_marginTop="30dp"
                android:background="#8B0000" />

            <TextView
                android:id="@+id/myLeaguesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/underCreateTournamentLine"
                android:layout_marginTop="20sp"
                android:text="Мои лиги"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myLeaguesText"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/myTournamentsText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="0"
                        android:textColor="#FF7E06"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/myTournamentsText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="70dp"
                        android:text="Текущие лиги"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/myTournamentsText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="0"
                        android:textColor="#FF7E06"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/myTournamentsText"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="70dp"
                        android:text="Завершенные лиги"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <View
                android:id="@+id/underMyLeaguesLine"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/myLeaguesText"
                android:layout_marginTop="160dp"
                android:background="#8B0000" />

            <TextView
                android:id="@+id/lastLeaguesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/underMyLeaguesLine"
                android:layout_marginTop="20sp"
                android:text="Недавние лиги"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/noLeagues"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastLeaguesText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:text="за последние 30 дней вы не проводили турниры"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_below="@id/noLeagues"
                android:backgroundTint="#A8B1FF"
                android:text="Создать лигу"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:layout_marginTop="20sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/createLeagueButton"/>

            <RelativeLayout
                android:id="@+id/moreSettings"
                android:layout_width="350sp"
                android:layout_height="380sp"
                android:layout_below="@id/myLeaguesText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="55sp"
                android:visibility="invisible">

                <View
                    android:layout_width="350sp"
                    android:layout_height="500sp"
                    android:layout_below="@id/underCreateTournamentLine"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/customization_form" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="10sp"
                    android:text="Пространство геймера"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <View
                    android:id="@+id/underOption1Line"
                    android:layout_width="350sp"
                    android:layout_height="3dp"
                    android:layout_below="@id/underCreateTournamentLine"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="50dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/notificationSettings"
                    android:layout_width="280sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/underOption1Line"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:text="Настройки уведомлений"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/underOption2Line"
                    android:layout_width="350sp"
                    android:layout_height="3dp"
                    android:layout_below="@id/notificationSettings"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/linkingPlatform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/underOption2Line"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="60sp"
                    android:text="Связать платформу"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/underOption3Line"
                    android:layout_width="350sp"
                    android:layout_height="3dp"
                    android:layout_below="@id/linkingPlatform"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/assistanceСenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/underOption3Line"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="90sp"
                    android:text="Центр помощи"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/underOption4Line"
                    android:layout_width="350sp"
                    android:layout_height="3dp"
                    android:layout_below="@id/assistanceСenter"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/underOption4Line"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="70sp"
                    android:text="Отправить отзыв"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/underOption5Line"
                    android:layout_width="350sp"
                    android:layout_height="3dp"
                    android:layout_below="@id/review"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/termsOfUse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/underOption5Line"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="35sp"
                    android:text="Условия использования"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/underOption6Line"
                    android:layout_width="350sp"
                    android:layout_height="3dp"
                    android:layout_below="@id/termsOfUse"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/quitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/underOption6Line"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="140sp"
                    android:text="Выйти"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:id="@+id/footer">

        <Button
            android:id="@+id/main"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:background="#00FFFFFF"
            android:foreground="@android:drawable/btn_dialog"
            app:icon="@android:drawable/arrow_up_float"
            android:layout_row="0" android:layout_column="0"/>

        <Button
            android:id="@+id/tournaments"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:background="#00FFFFFF"
            android:foreground="@android:drawable/btn_dialog"
            app:icon="@android:drawable/arrow_up_float"
            android:layout_row="0" android:layout_column="1"/>

        <Button
            android:id="@+id/team"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:background="#00FFFFFF"
            android:foreground="@android:drawable/btn_dialog"
            app:icon="@android:drawable/arrow_up_float"
            android:layout_row="0" android:layout_column="2"/>

        <Button
            android:id="@+id/more"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:background="#00FFFFFF"
            android:foreground="@android:drawable/btn_dialog"
            app:icon="@android:drawable/arrow_up_float"
            android:layout_row="0" android:layout_column="3"/>
        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/main"
            android:text="Управление клубом"
            android:layout_marginStart="15dp"
            android:textAlignment="center"
            android:layout_row="1" android:layout_column="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tournaments"
            android:text="Создать"
            android:layout_marginStart="40dp"
            android:layout_row="1" android:layout_column="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team"
            android:text="Контент"
            android:layout_marginStart="40dp"
            android:layout_alignParentEnd="true"
            android:layout_row="1" android:layout_column="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/more"
            android:text="ещё"
            android:layout_marginStart="50dp"
            android:layout_alignParentEnd="true"
            android:layout_row="1" android:layout_column="3"/>
    </GridLayout>
</RelativeLayout>