<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        app:cardCornerRadius="15dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/gradient_card">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/teamId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="id"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/teamName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="team name"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/teamGame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="team game"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/teamInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="team info"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/teamRegion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="team region"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/teamPlayersCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="10dp"/>
                <Button
                    android:id="@+id/requestToTeam"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/teal_200"
                    android:layout_gravity="center"
                    android:text="присоединиться"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>