<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TournamentCustomization">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3D3D3">
        <View
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:background="@drawable/new_tournament_header"
            android:id="@+id/header_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Новая лига"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Кастомизировать лигу"
            android:layout_below="@+id/header_title"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:id="@+id/customizationText"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="900sp"
            android:id="@+id/customizationForm"
            android:layout_below="@+id/customizationText"
            android:layout_marginTop="10sp"
            android:background="@drawable/customization_form"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Игра"
            android:layout_below="@+id/header_title"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="70sp"
            android:id="@+id/leagueGameText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название лиги"
            android:layout_below="@+id/leagueGameText"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:id="@+id/leagueName"/>

        <View
            android:layout_width="380sp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/leagueName"
            android:background="@drawable/forms"
            android:id="@+id/leagueNameForm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="50sp"
            android:text="Арбуз"
            android:layout_below="@+id/leagueName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Режим лиги"
            android:layout_below="@+id/leagueNameForm"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAlignment="center"
            android:id="@+id/leagueModeText"
            android:layout_margin="10sp"/>
        <View
            android:layout_width="380sp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/leagueModeText"
            android:background="@drawable/forms"
            android:id="@+id/leagueModeForm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginLeft="50sp"
            android:text="Competitive: 1v1"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/leagueModeText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Количество команд в лиге"
            android:layout_below="@+id/leagueModeForm"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAlignment="center"
            android:id="@+id/leagueTeamsCountText"
            android:layout_margin="10sp"/>
        <View
            android:layout_width="380sp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/leagueTeamsCountText"
            android:background="@drawable/forms"
            android:id="@+id/leagueTeamsCountForm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginLeft="50sp"
            android:text="16"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/leagueTeamsCountText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Количество кругов в лиге"
            android:layout_below="@+id/leagueTeamsCountForm"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAlignment="center"
            android:id="@+id/leagueRoundsCountText"
            android:layout_margin="10sp"/>
        <View
            android:layout_width="380sp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/leagueRoundsCountText"
            android:background="@drawable/forms"
            android:id="@+id/leagueRoundsCountForm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginLeft="50sp"
            android:text="3"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/leagueRoundsCountText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Количество победителей"
            android:layout_below="@+id/leagueRoundsCountForm"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAlignment="center"
            android:id="@+id/leagueWinnersCountText"
            android:layout_margin="10sp"/>
        <View
            android:layout_width="380sp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/leagueWinnersCountText"
            android:background="@drawable/forms"
            android:id="@+id/leagueWinnersCountForm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginLeft="50sp"
            android:text="1"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/leagueWinnersCountText"/>
        <View
            android:id="@+id/underGameFormLine"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/leagueWinnersCountForm"
            android:layout_marginTop="20dp"
            android:background="#8B0000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подробности"
            android:layout_below="@+id/underGameFormLine"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAlignment="center"
            android:id="@+id/leagueInfoText"
            android:layout_margin="20sp"/>
        <View
            android:layout_width="380sp"
            android:layout_height="150sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/leagueInfoText"
            android:background="@drawable/forms"
            android:id="@+id/leagueInfoForm"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Правила"
            android:layout_below="@+id/leagueInfoForm"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAlignment="center"
            android:id="@+id/leagueRulesText"
            android:layout_margin="20sp"/>
        <View
            android:layout_width="380sp"
            android:layout_height="150sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/leagueRulesText"
            android:background="@drawable/forms"
            android:id="@+id/leagueRulesForm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_below="@+id/leagueRulesForm"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="60sp"
            android:text="Клуб"
            android:id="@+id/clubText"
            android:layout_centerHorizontal="true"/>
        <View
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:background="@drawable/create_organization_button"
            android:layout_below="@+id/clubText"
            android:layout_centerHorizontal="true"
            android:id="@+id/clubSelectButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Арбуз"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_below="@+id/clubText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"/>
        <View
            android:id="@+id/underInfoFormLine"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/clubSelectButton"
            android:layout_marginTop="10dp"
            android:background="#8B0000"/>

        <View
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:background="@drawable/create_organization_button"
            android:layout_below="@+id/underInfoFormLine"
            android:layout_centerHorizontal="true"
            android:id="@+id/finishCustomizationButton"
            android:layout_marginTop="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создать"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_below="@+id/underInfoFormLine"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25sp"/>

        <View
            android:layout_width="400sp"
            android:layout_height="220sp"
            android:background="@drawable/create_tournament_button"
            android:layout_below="@+id/leagueInfoText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:id="@+id/notificationLeagueCreated"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лига создана!"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_below="@+id/leagueInfoText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35sp"
            android:id="@+id/leagueCreatedText"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вы успешно создали лигу."
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_below="@+id/leagueCreatedText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:visibility="invisible"
            android:id="@+id/leagueCreatedText1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Хотите её опубликовать?"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_below="@+id/leagueCreatedText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55sp"
            android:id="@+id/publishQuestion"
            android:visibility="invisible"/>
        <View
            android:layout_width="125sp"
            android:layout_height="50sp"
            android:background="@drawable/create_organization_button"
            android:layout_below="@+id/publishQuestion"
            android:layout_marginLeft="50sp"
            android:id="@+id/publishLaterButton"
            android:layout_marginTop="30sp"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Позже"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_below="@+id/publishQuestion"
            android:layout_marginLeft="75sp"
            android:layout_marginTop="35sp"
            android:visibility="invisible"
            android:id="@+id/publishLaterButtonText"/>
        <View
            android:layout_width="180sp"
            android:layout_height="50sp"
            android:background="@drawable/create_organization_button"
            android:layout_below="@+id/publishQuestion"
            android:layout_marginRight="50sp"
            android:layout_alignParentEnd="true"
            android:id="@+id/publishNowButton"
            android:layout_marginTop="30sp"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Опубликовать"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_below="@+id/publishQuestion"
            android:layout_marginRight="60sp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35sp"
            android:visibility="invisible"
            android:id="@+id/publishNowButtonText"/>

        <View
            android:layout_width="400sp"
            android:layout_height="170sp"
            android:background="@drawable/create_tournament_button"
            android:layout_below="@+id/leagueInfoText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:id="@+id/notificationLeaguePublished"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лига опубликована!"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_below="@+id/leagueInfoText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35sp"
            android:id="@+id/tournamentPublishedText"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вы успешно опубликовали лигу."
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_below="@+id/leagueCreatedText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:visibility="invisible"
            android:id="@+id/publishSuccessText"/>
        <View
            android:layout_width="180sp"
            android:layout_height="50sp"
            android:background="@drawable/create_organization_button"
            android:layout_below="@+id/publishSuccessText"
            android:layout_centerHorizontal="true"
            android:id="@+id/goToContentButton"
            android:visibility="invisible"
            android:layout_marginTop="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="На главную"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_below="@+id/publishSuccessText"
            android:layout_marginTop="25sp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:id="@+id/goToContentButtonText"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>