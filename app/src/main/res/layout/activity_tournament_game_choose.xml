<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TournamentGameChoose">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_tournament_game_choose">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="@string/createTournament"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:id="@+id/createTournamentText"/>
            <View
                android:id="@+id/underCreateTournamentTextLine"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/createTournamentText"
                android:layout_marginTop="10dp"
                android:background="#8B0000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="@string/gameChoose"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/underCreateTournamentTextLine"
                android:id="@+id/tournamentGameChooseText"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/tournamentGameChooseText"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_row="0" android:layout_column="0"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="10dp">
                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/pubg_logo"
                        android:contentDescription="@string/choose_pubg"
                        android:id="@+id/pubgChoose"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_row="0" android:layout_column="1"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="10dp">
                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/valorant"
                        tools:ignore="ContentDescription"
                        android:id="@+id/valorantChoose"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0" android:layout_column="2"
                    app:cardCornerRadius="20dp"
                    android:layout_marginBottom="10dp">
                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/brawl_logo"
                        tools:ignore="ContentDescription"
                        android:id="@+id/brawlStarsChoose"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pubg"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:layout_row="1" android:layout_column="0"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/valorant"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:layout_row="1" android:layout_column="1"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/brawl_stars"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:layout_row="1" android:layout_column="2"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_row="2" android:layout_column="0"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="10dp">
                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/free_fire_logo"
                        tools:ignore="ContentDescription"
                        android:id="@+id/freeFireChoose"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="10dp"
                    android:layout_row="2" android:layout_column="1">
                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/standoff2_logo"
                        tools:ignore="ContentDescription"
                        android:id="@+id/standoff2Choose"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="10dp"
                    android:layout_row="2" android:layout_column="2">
                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/clash_of_clans_logo"
                        tools:ignore="ContentDescription"
                        android:id="@+id/clashOfClansChoose"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/free_fire"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:layout_row="3" android:layout_column="0"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/standoff2"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:layout_row="3" android:layout_column="1"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/clash_of_clans"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:layout_row="3" android:layout_column="2"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="10dp"
                    android:layout_row="4" android:layout_column="0">
                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/apex_legends_logo"
                        tools:ignore="ContentDescription"
                        android:id="@+id/apexLegendsChoose"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="10dp"
                    android:layout_row="4" android:layout_column="1">
                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/clash_royal_logo"
                        tools:ignore="ContentDescription"
                        android:id="@+id/clashRoyalChoose"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_row="4" android:layout_column="2">
                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/mobile_legends_logo"
                        tools:ignore="ContentDescription"
                        android:id="@+id/mobileLegendsChoose"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/apex_legends"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_row="5" android:layout_column="0"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/clash_royal"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_row="5" android:layout_column="1"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_legends"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_row="5" android:layout_column="2"/>
            </GridLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>