<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TournamentGameChoose">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:text="Создать лигу"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:id="@+id/createTournamentText"/>
        <View
            android:id="@+id/underCreateTournamentTextLine"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/createTournamentText"
            android:layout_marginTop="10dp"
            android:background="#8B0000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:text="Выберите игру"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_below="@+id/underCreateTournamentTextLine"
            android:id="@+id/tournamentGameChooseText"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/tournamentGameChooseText"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="0dp">

            <ImageButton
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:background="@drawable/pubg_logo"
                android:layout_marginRight="35sp"
                android:layout_marginBottom="10sp"

                android:layout_row="0" android:layout_column="0"/>
            <ImageButton
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:background="@drawable/valorant"
                android:layout_marginRight="35sp"
                android:layout_marginBottom="10sp"
                android:layout_row="0" android:layout_column="1"/>
            <ImageButton
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/brawl_logo"
                android:layout_row="0" android:layout_column="2"/>

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Pubg"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginBottom="20sp"
                android:layout_row="1" android:layout_column="0"/>
            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Valorant"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginBottom="20sp"
                android:layout_row="1" android:layout_column="1"/>
            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="brawl stars"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginBottom="20sp"
                android:layout_row="1" android:layout_column="2"/>

            <ImageButton
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:background="@drawable/free_fire_logo"
                android:layout_marginRight="35sp"
                android:layout_marginBottom="10sp"
                android:layout_row="2" android:layout_column="0"/>
            <ImageButton
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:background="@drawable/standoff2_logo"
                android:layout_marginRight="35sp"
                android:layout_marginBottom="10sp"
                android:layout_row="2" android:layout_column="1"/>
            <ImageButton
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/clash_of_clans_logo"
                android:layout_row="2" android:layout_column="2"/>

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Free Fire"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginBottom="20sp"
                android:layout_row="3" android:layout_column="0"/>
            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Standoff2"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginBottom="20sp"
                android:layout_row="3" android:layout_column="1"/>
            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Clash Of Clans"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginBottom="20sp"
                android:layout_row="3" android:layout_column="2"/>

            <ImageButton
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:background="@drawable/apex_legends_logo"
                android:layout_marginRight="35sp"
                android:layout_marginBottom="10sp"
                android:layout_row="4" android:layout_column="0"/>
            <ImageButton
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:background="@drawable/clash_royal_logo"
                android:layout_marginRight="35sp"
                android:layout_marginBottom="10sp"
                android:layout_row="4" android:layout_column="1"/>
            <ImageButton
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/mobile_legends_logo"
                android:layout_row="4" android:layout_column="2"/>

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Apex Legends"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_row="5" android:layout_column="0"/>
            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Clash Royal"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_row="5" android:layout_column="1"/>
            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Mobile Legends"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_row="5" android:layout_column="2"/>
        </GridLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>