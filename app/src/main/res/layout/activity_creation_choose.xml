<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreationChoose">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:background="@drawable/create_organization_form_background"
            android:layout_margin="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:text="Что вы хотите создать?"
            android:textAlignment="center"
            android:layout_marginTop="30sp"
            android:id="@+id/chooseCreationText"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chooseCreationText">
            <View
                android:layout_width="150sp"
                android:layout_height="60sp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="40sp"
                android:background="@drawable/create_tournament_button"/>
            <View
                android:layout_width="120sp"
                android:layout_height="60sp"
                android:background="@drawable/create_tournament_button"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="40sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:text="Турнир"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="70sp"
            android:layout_below="@+id/chooseCreationText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:text="Лигу"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="260sp"
            android:layout_below="@+id/chooseCreationText"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>